<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="revechatsdk_AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/revechatsdk_colorPrimary</item>
        <item name="colorPrimaryDark">@color/revechatsdk_colorPrimaryDark</item>
        <item name="colorAccent">@color/revechatsdk_colorPrimary</item>
    </style>
    <style name="revechatsdk_AppTheme.Base.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/revechatsdk_colorPrimary</item>
        <item name="colorPrimaryDark">@color/revechatsdk_colorPrimaryDark</item>
        <item name="colorAccent">@color/revechatsdk_colorPrimary</item>
    </style>
    <!-- ToolBar -->
    <style name="revechatsdk_ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/revechatsdk_colorPrimary</item>
        <item name="android:elevation" tools:ignore="NewApi">0dp</item>
    </style>

    <style name="revechatsdk_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/revechatsdk_colorPrimary</item>
        <item name="colorPrimaryDark">@color/revechatsdk_colorPrimaryDark</item>
        <item name="colorAccent">@color/revechatsdk_colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/revechatsdk_control_normal</item>
        <item name="colorControlActivated">@color/revechatsdk_colorPrimary</item>
        <item name="colorControlHighlight">@color/revechatsdk_control_normal</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="revechatsdk_menuThemeDefault" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>

    </style>


